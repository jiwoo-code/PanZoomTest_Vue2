function MyHeader() {}

MyHeader.prototype.init = function (params) {
  this.params = params;

  // ì „ì²´ wrapper
  const eGui = document.createElement('div');
  eGui.className = 'ag-header-cell-label'; // í•µì‹¬ í´ë˜ìŠ¤: ê¸°ë³¸ ìŠ¤íƒ€ì¼ ìœ ì§€

  // âœ… [1] ì»¤ìŠ¤í…€ ë²„íŠ¼ (ì™¼ìª½)
  const customBtn = document.createElement('button');
  customBtn.innerText = 'ğŸ”„';
  customBtn.className = 'my-header-button';
  customBtn.addEventListener('click', () => {
    alert(`ì»¬ëŸ¼: ${params.column.colDef.field}`);
  });

  // âœ… [2] ì»¬ëŸ¼ ì´ë¦„
  const label = document.createElement('span');
  label.className = 'ag-header-cell-text';
  label.innerText = params.column.colDef.headerName || params.column.colDef.field;

  // âœ… [3] ì •ë ¬/í•„í„° ì˜ì—­ (ê¸°ë³¸ ì•„ì´ì½˜ì€ ag-Grid ë‚´ë¶€ê°€ ì±„ì›€)
  const sortOrderIcon = document.createElement('span');
  sortOrderIcon.className = 'ag-header-icon ag-sort-order';

  const sortAscIcon = document.createElement('span');
  sortAscIcon.className = 'ag-header-icon ag-sort-ascending-icon';

  const sortDescIcon = document.createElement('span');
  sortDescIcon.className = 'ag-header-icon ag-sort-descending-icon';

  const menuIcon = document.createElement('span');
  menuIcon.className = 'ag-header-icon ag-header-cell-menu-button';
  menuIcon.style.marginLeft = '8px'; // âœ… í•„í„° ë²„íŠ¼ ë§ˆì§„

  // í•„í„° ë©”ë‰´ ì—´ê¸°
  menuIcon.addEventListener('click', (e) => {
    e.stopPropagation(); // ì •ë ¬ íŠ¸ë¦¬ê±° ë°©ì§€
    params.showColumnMenu(menuIcon);
  });

  // ìˆœì„œëŒ€ë¡œ êµ¬ì„± (ì™¼ìª½ ë²„íŠ¼ â†’ ì»¬ëŸ¼ëª… â†’ ì •ë ¬/í•„í„°)
  eGui.appendChild(customBtn);
  eGui.appendChild(label);
  eGui.appendChild(sortOrderIcon);
  eGui.appendChild(sortAscIcon);
  eGui.appendChild(sortDescIcon);
  eGui.appendChild(menuIcon);

  this.eGui = eGui;
};

MyHeader.prototype.getGui = function () {
  return this.eGui;
};




