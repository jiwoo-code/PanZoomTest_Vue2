function MyHeader() {}

MyHeader.prototype.init = function (params) {
  this.params = params;

  const eGui = document.createElement('div');
  eGui.className = 'my-custom-header-wrapper';

  // üëâ Ï†ïÎ†¨/ÌïÑÌÑ∞ ÏïÑÏù¥ÏΩò ÏòÅÏó≠
  const iconsContainer = document.createElement('span');
  iconsContainer.className = 'ag-header-cell-label';

  // ag-GridÍ∞Ä ÏûêÎèôÏúºÎ°ú Ïä§ÌÉÄÏùº Ï£ºÎäî ÎÇ¥Î∂Ä Íµ¨Ï°∞ Î≥µÏÇ¨
  const labelContainer = document.createElement('span');
  labelContainer.className = 'ag-header-cell-text';
  labelContainer.innerText = params.column.colDef.headerName || params.column.colDef.field;

  const iconSortOrder = document.createElement('span');
  iconSortOrder.className = 'ag-header-icon ag-sort-order';

  const iconSortAsc = document.createElement('span');
  iconSortAsc.className = 'ag-header-icon ag-sort-ascending-icon';

  const iconSortDesc = document.createElement('span');
  iconSortDesc.className = 'ag-header-icon ag-sort-descending-icon';

  const iconMenu = document.createElement('span');
  iconMenu.className = 'ag-header-icon ag-header-cell-menu-button';
  iconMenu.innerText = '‚ò∞';
  iconMenu.addEventListener('click', () => {
    params.showColumnMenu(iconMenu);
  });

  // Î≤ÑÌäº
  const customBtn = document.createElement('button');
  customBtn.innerText = 'üîÑ';
  customBtn.className = 'my-header-button';
  customBtn.addEventListener('click', () => {
    alert(`Ïª¨Îüº: ${params.column.colDef.field}`);
  });

  // ag Í∏∞Î≥∏ Íµ¨Ï°∞Ï≤òÎüº Ï°∞Ìï©
  iconsContainer.appendChild(labelContainer);
  iconsContainer.appendChild(iconSortOrder);
  iconsContainer.appendChild(iconSortAsc);
  iconsContainer.appendChild(iconSortDesc);
  iconsContainer.appendChild(iconMenu);
  iconsContainer.appendChild(customBtn);

  eGui.appendChild(iconsContainer);

  this.eGui = eGui;
};

MyHeader.prototype.getGui = function () {
  return this.eGui;
};



.my-custom-header-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 100%;
  /* background-color: white; ‚Üê Ï†úÍ±∞ */
  padding: 0 4px;
  box-sizing: border-box;
  font-size: inherit;
  color: inherit;
}

.my-header-button {
  background: none;
  border: none;
  cursor: pointer;
  padding: 2px;
  font-size: inherit;
  color: inherit;
}