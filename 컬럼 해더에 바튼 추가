MyHeader.prototype.init = function (params) {
  console.log('í—¤ë” ì»´í¬ë„ŒíŠ¸ params:', params); // âœ… ì—¬ê¸°ì—!

  const wrapper = document.createElement('div');
  wrapper.className = 'my-custom-header-wrapper';

  const label = document.createElement('span');
  label.innerText = params.colDef.headerName || params.colDef.field;

  const btn = document.createElement('button');
  btn.innerText = 'ğŸ”„';
  btn.className = 'my-header-button';

  btn.addEventListener('click', () => {
    alert(`ì»¬ëŸ¼: ${params.colDef.field}`);
  });

  wrapper.appendChild(label);
  wrapper.appendChild(btn);

  this.eGui = wrapper;
};


