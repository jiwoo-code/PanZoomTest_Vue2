MyHeader.prototype.init = function (params) {
  console.log('헤더 컴포넌트 params:', params); // ✅ 여기에!

  const wrapper = document.createElement('div');
  wrapper.className = 'my-custom-header-wrapper';

  const label = document.createElement('span');
  label.innerText = params.colDef.headerName || params.colDef.field;

  const btn = document.createElement('button');
  btn.innerText = '🔄';
  btn.className = 'my-header-button';

  btn.addEventListener('click', () => {
    alert(`컬럼: ${params.colDef.field}`);
  });

  wrapper.appendChild(label);
  wrapper.appendChild(btn);

  this.eGui = wrapper;
};


.my-custom-header-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  padding: 0 6px;
  overflow: hidden;
  background-color: white; /* 배경색 지정 필수 */
}

.my-header-button {
  font-size: 12px;
  padding: 2px 6px;
  cursor: pointer;
}


import MyHeader from './MyHeader.js';

columnDefs: [
  {
    field: 'status',
    headerName: '상태',
    headerComponent: MyHeader,
    width: 160
  },
  {
    field: 'other',
    headerName: '다른 컬럼'
  }
]